<!DOCTYPE html>
<html>
  <head>
      <link rel="stylesheet" href="css/adminMain.css">
      <link rel="stylesheet" href="css/adminInventario.css">
      <title>Inicio Administración</title>
      <link rel="icon" href="images/LOGO-1.png"/>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

  </head>
    <body id="body"> 

      <header>
        <div class="icon__menu">
            <i class="fas fa-bars" id="btn_open"></i>
        </div>
      </header>

      <div class="menu__side" id="menu_side">

        <div class="name__page">
          <i class="fas fa-glasses" title="Inicio"></i>
          <h4>OPTICAS ROIS</h4>
        </div>

        <div class="options__menu">
          <a href="/adminMain"> 
            <div class="option">
              <i class="fas fa-home" title="Inicio"></i>
              <h4>Inicio</h4>
            </div>
          </a>

          <a href="/adminInventario"> 
            <div class="option">
              <i class="fas fa-box-open" title="Inventario"></i>
              <h4>Inventario</h4>
            </div>
          </a>

          <a href="/adminEscaneo"> 
            <div class="option">
              <i class="fas fa-edit" title="Modificar inventario"></i>
              <h4 >Modificar inventario</h4>
            </div>
          </a>

          <a href="/adminProducto"> 
            <div class="option">
              <i class="fas fa-plus-circle" title="Agregar producto"></i>
              <h4>Agregar producto</h4>
            </div>
          </a>
          
          <a href="/adminOrdenes" class="selected"> 
            <div class="option">
              <i class="fas fa-truck" title="Pedidos"></i>
              <h4>Pedidos</h4>
            </div>
          </a>

          <a href="/adminCerrarSesion"> 
            <div class="option">
              <i class="fas fa-sign-out-alt" title="Cerrar Sesión"></i>
              <h4>Cerrar Sesión</h4>
            </div>
          </a>

        </div>
      </div>

      <main>
        <h1 style="color: #750d37; font-size: 28px; text-align: center;">Admin Órdenes</h1>
    <table class="inventory-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Costo</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Estado</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Fecha</th>
                <th>ID de Productos</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i < result.length; i++) { %>
                <tr>
                    <td><%= result[i].id %></td>
                    <td><%= result[i].cost %></td>
                    <td><%= result[i].name %></td>
                    <td><%= result[i].email %></td>
                    <td><%= result[i].status %></td>
                    <td><%= result[i].address %></td>
                    <td><%= result[i].phone %></td>
                    <td><%= result[i].date %></td>
                    <td><%= result[i].product_ids %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
      </main>

      <script src="js/admin.js"></script>
      
    </body>
</html>



